{
  "extends": "next",
  "rules": {
    "@typescript-eslint/no-unused-vars": "off", // Disable no-unused-vars
    "@typescript-eslint/no-require-imports": "off", // Disable no-require-imports
    "react-hooks/exhaustive-deps": "off", // Disable exhaustive deps in useEffect
    "next/next/no-img-element": "off", // Disable next.js warning for using <img> tag
    "@typescript-eslint/no-unused-expressions": "off" // Disable unused expressions
  }
}